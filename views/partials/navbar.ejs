<div class="navbar">
    <div class="navbar-header row row-add-spacing">
        <a id="back" href="#"><i class="fas fa-arrow-left"></i></a>
        <h1><a href="/"><i class="fas fa-film"></i> Clarity</a></h1>
    </div>
    <div class="navbar-links">
        <ul>
            <li><a href="/search"><i class="fas fa-search"></i></a></li>
            <li><a href="/settings"><i class="fas fa-sliders-h"></i></a></li>
        </ul>
    </div>
</div>

<script>
    let back = $('#back')
    back.click(function() {
        window.history.back()
    })

    if(window.location.pathname == '/library') {
        back.hide()
    }

    let navbar = $('.navbar')
    let prevScroll = 0
    let offset = navbar.height() * 2

    // set padding of top to offset of navbar
    $('body').css('padding-top', offset)

    $(window).scroll(function(event) {
        let currentScroll = $(this).scrollTop()
        if(currentScroll > offset) {
            if(currentScroll > prevScroll) {
                // up
                navbar.css('top', -offset).removeClass('navbar-background')
            } else {
                // down
                navbar.css('top', 0).addClass('navbar-background')
            }
        } else {
            // down
            navbar.css('top', 0).removeClass('navbar-background')
        }

        prevScroll = currentScroll
    })
</script>