<html>
    <head>
        <title>Clarity</title>
        <link rel="stylesheet" href="/css/style.css">
        <script src="/scripts_server/jquery/dist/jquery.min.js"></script>
        <script src="/scripts_server/socket.io-client/dist/socket.io.js"></script>
        <script src="/scripts/index.js"></script>
    </head>
    <body>
        <% include partials/navbar.ejs %>
        <div class="container">
            <div class="header">
                <h1>Library</h1>
            </div>
            <div class="row row-add-spacing">
                <p>Sort:</p>
                <label class="select-wrapper">
                    <select id="sortSelect">
                        <option value="title+1">A to Z</option>
                        <option value="title+-1">Z to A</option>
                        <option value="year+1">Released Ascending</option>
                        <option value="year+-1">Released Descending</option>
                    </select>
                </label>
                <button id="sortBtn" class="btn btn-primary">Sort</button>
            </div>
            <div class="center-text">
                <a id="scanLibrary" href="#">Scan Library</a>
            </div>
            <!-- Media is presented in #media -->
            <div id="media" class="row row-container row-center"></div>
            <div id="noDocsFound" class="center-text">
                <p>No media found :(</p>
            </div>

            <div id="scanLibraryDialog" class="dialog-container">
                <div class="dialog">
                    <div class="lds-dual-ring"></div>
                    <p>Scanning Library... <span id="scanProgress">0%</span></p>
                </div>
            </div>
        </div>
    </body>
</html>