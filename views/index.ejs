<html>
    <head>
        <title>Clarity</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/scripts_server/jquery/dist/jquery.min.js"></script>
        <script src="/scripts/components/dialog.js"></script>
        <script src="/scripts/index.js"></script>
    </head>
    <body>
        <% include partials/navbar.ejs %>
        <div class="container">
            <div class="header">
                <h1>Library</h1>
            </div>
            <div class="row row-add-spacing">
                <select id="selectType">
                    <option value="title">Alphabetical</option>
                    <option value="year">Year</option>
                </select>
                <select id="selectOrder">
                    <option value="+1">Ascending</option>
                    <option value="+-1">Descending</option>
                </select>
                <button id="btnSort" class="btn">Sort <i class="fas fa-sort"></i></button>
            </div>
            <!-- Media is presented in #media -->
            <div id="media" class="row row-container row-center"></div>
            <div id="noMediaFound" class="center-text">
                <p>No media found, go to <a href="/settings">Settings</a> and scan your library!</p>
            </div>
        </div>
    </body>
</html>