<html>
    <head>
        <title>Settings - Clarity</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/scripts_server/jquery/dist/jquery.min.js"></script>
        <script src="/scripts_server/socket.io-client/dist/socket.io.js"></script>
        <script src="/scripts/settings.js"></script>
    </head>
    <body>
        <% include partials/navbar.ejs %>
        <div class="settings-container">
            <div class="settings-content">
                <div clsas="header">
                    <h1>Settings</h1>
                </div>
    
                <div class="input-wrapper" id="settingsServerPort">
                    <label>Server Port:</label>
                    <input class="textfield" type="text">
                </div>
                <div class="input-wrapper" id="settingsMediaDir">
                    <label>Media Directory: </label>
                    <input class="textfield" type="text">
                </div>
                <div class="input-wrapper" id="settingsPosterDir">
                    <label>Poster Directory: </label>
                    <input class="textfield" type="text">
                </div>
                <div class="input-wrapper" id="settingsApiKey">
                    <label>TMDb Api Key: </label>
                    <input class="textfield" type="text">
                </div>
            </div>
            <div class="settings-button-bar">
                <div class="row row-add-spacing">
                    <button id="btnScanLibrary" class="btn">Scan Library <i class="fas fa-barcode"></i></button>
                    <button id="btnSaveSettings" class="btn btn-primary">Save Settings <i class="fas fa-save"></i></button>
                </div>
            </div>

            <div id="scanLibraryDialog" class="dialog-container">
                <div class="dialog">
                    <div class="lds-dual-ring"></div>
                    <p id="scanLibraryTxt">Scanning Library... <span id="scanProgress">0%</span></p>
                </div>
            </div>
        </div>
    </body>
</html>