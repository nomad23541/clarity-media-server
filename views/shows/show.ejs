<html>
    <head>
        <title><%=doc.name%> - Clarity</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/scripts_server/jquery/dist/jquery.min.js"></script>
        <script src="/scripts/partials/navbar.js"></script>
        <!--<script src="/scripts/shows/show.js"></script>-->
    </head>
    <body>
        <% include ../partials/navbar.ejs %>
        <div class="container">
            <div class="header">
                <h1><%=doc.name%></h1>
            </div>
            <!-- Media is presented here -->
            <div id="media" class="media-grid-container">
                <% for(let season in doc.seasons) { %>
                    <div class="media-box">
                        <a href="/library/shows/show/<%=doc._id%>/season/<%=doc.seasons[season].seasonNumber%>">
                            <div class="poster-wrapper">
                                <img src="<%=doc.seasons[season].images.posterWeb%>">
                                <div class="poster-overlay">
                                </div>
                            </div>
                        </a>
                        <p class="media-title"><%=doc.seasons[season].name%></p>
                        <p class="media-year"><%=doc.seasons[season].numberOfEpisodes%> Episodes</p>
                    </div>
                <%}%>
            </div>
        </div>
    </body>
</html>